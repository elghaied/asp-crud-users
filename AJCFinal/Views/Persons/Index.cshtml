@using AJCFinal.Models.Person
@model IEnumerable<PersonBaseViewModel>
@{
    ViewData["Title"] = "All People";
}
<h2>@ViewData["Title"]</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="container">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var person in Model)
        {
            <div class="col">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(person.Image))
                    {
                        <img src="@Url.Content(person.Image)" class="card-img-top" alt="@person.FirstName @person.LastName">
                    }
                    else
                    {
                        <img src="@Url.Content("~/images/Default_pfp.jpg")" class="card-img-top" alt="Default Profile">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@person.FirstName @person.LastName</h5>
                        @if (User.Identity.IsAuthenticated && User.FindFirst("UserId")?.Value != person.Id.ToString())
                        {
                            @if (!person.IsFriend)
                            {
                                <form asp-controller="Persons" asp-action="AddFriend" method="post">
                                    <input type="hidden" name="friendId" value="@person.Id" />
                                    <button type="submit" class="btn btn-primary">Add as Friend</button>
                                </form>
                            }
                            else
                            {
                                <form asp-controller="Persons" asp-action="RemoveFriend" method="post">
                                    <input type="hidden" name="friendId" value="@person.Id" />
                                    <button type="submit" class="btn btn-danger">Remove Friend</button>
                                </form>
                            }
                        }
                        else if (User.Identity.IsAuthenticated && User.FindFirst("UserId")?.Value == person.Id.ToString())
                        {
                            <span class="text-muted">This is you</span>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>